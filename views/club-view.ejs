<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= club?.name ? club.name + " · Club" : "Club" %></title>
  <link href="/output.css" rel="stylesheet" />
</head>
<body class="flex bg-gray-900 text-white min-h-screen p-6 justify-center items-center max-w-dvw">
  <% if (user && user.first_name) { %>
    <div class="flex w-full gap-6">
      
      <!-- Left: Nav / Shortcuts -->
      <div class="flex w-1/3 flex-col gap-6 pr-16 justify-center items-center">
        <div class="flex w-full bg-gray-800 rounded-2xl p-6 shadow-lg flex-col">
          <h2 class="text-xl font-semibold mb-4">Navigation</h2>
          <div class="flex flex-col gap-3">
            <a href="/dashboard" class="rounded-lg p-2 bg-gray-700 hover:bg-gray-600 text-center">Back to Dashboard</a>
          </div>
        </div>
      </div>

      <!-- Middle: Club View -->
      <main class="flex w-1/3 flex-col gap-6 justify-center items-center">
        <div class="flex w-4/5 bg-gray-800 rounded-2xl p-6 shadow-lg flex-col">
          <h1 class="text-2xl font-semibold mb-2"><%= club.name %></h1>
          <p class="text-sm text-gray-300 mb-4"><%= club.description %></p>
          <!-- Join button -->
          <% if (!club.is_member) { %>
            <!-- If your join route expects POST, prefer a form. If it’s GET, use an <a>. -->
            <form action="/join-club/<%= club.id %>" method="POST" class="mt-2">
                <% if (error) { %>
                <p class="text-red-500 text-sm mb-2"><%= error %></p>
                <% } %>
                <label for="passcode" class="block text-sm">Secret Passcode</label>
                <input
                    id="passcode"
                    name="passcode"
                    type="password"
                    required
                    class="w-full rounded-lg p-2 mb-2 bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="Enter passcode"
                />
              <button type="submit" class="w-full rounded-lg p-3 bg-blue-600 hover:bg-blue-700 cursor-pointer">
                Join Club
              </button>
            </form>
          <% } else { %>
            <div class="w-full rounded-lg p-3 border text-center flex flex-col gap-4">
            <div>
                <p class="text-green-600">You are a member of this club.</p>
                <form action="/leave-club/<%= club.id %>" method="POST" class="mt-2">
                <% if (club.is_owner) { %>

               <% } else { %>
                    <button class="w-full rounded-lg p-3 bg-rose-600 hover:bg-rose-700 cursor-pointer">
                        Leave Club
                    </button>
               <% } %>
                </form>
            </div>
            <div>
                <a href="/club/<%= club.id %>/create-topic" class="w-full rounded-lg p-3 bg-green-600 hover:bg-green-700 block text-center">
                Create Topic
                </a>
            </div>
            </div>
          <% } %>

          <!-- (Optional) Owner-only actions -->
          <% if (club.is_owner) { %>
            <div class="mt-4 grid grid-cols-2 gap-3">
              <a href="/club/<%= club.id %>/edit" class="rounded-lg p-2 bg-gray-700 hover:bg-gray-600 text-center cursor-pointer">Edit Club</a>
                <form action="/delete-club/<%= club.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this club? This action cannot be undone.');">
                <button class="w-full rounded-lg p-2 bg-red-600 hover:bg-red-700 cursor-pointer">
                    Delete Club
                </button>
                </form>
            </div>
          <% } %>
        </div>
      </main>

      <!-- Right: Extras (optional) -->
      <div class="flex w-1/3 flex-col gap-6">
        <div class="flex w-full bg-gray-800 rounded-2xl p-6 shadow-lg flex-col">
          <div class="flex justify-between items-center">
              <div>
                  <h2 class="text-xl font-semibold mb-4">Club Stats</h2>
              </div>
              <div>
                <h2 class="text-xl font-semibold mb-4">Club Owner: <%= club.owner_name %></h2>
              </div>
          </div>
          <ul class="text-sm text-gray-300 space-y-2">
            <li>Members: <span class="text-gray-200 font-medium"><%= club.members_count%></span></li>
            <li>Messages: <span class="text-gray-200 font-medium"><%= club.messages_count %></span></li>
          </ul>
          <h2 class="text-xl font-semibold mb-4 mt-4">Club Topics</h2>
          <% if (club_topics === null) { %>
            <p class="text-sm text-gray-400">No topics available.</p>
         <% } else { %>
            <div class="flex w-full bg-gray-800 rounded-2xl p-6 shadow-lg flex-col overflow-y-auto max-h-[40vh]">
              <h2 class="text-xl font-semibold mb-4">Topics</h2>
              <% if (club.is_member) { %>
              <ul class="space-y-2">
                <% club_topics.forEach(topic => { %>
                    <li class="bg-gray-700 p-3 rounded-lg">
                      <a href="/topic/<%= club.id %>/<%= topic.id %>">
                        <h3 class="font-semibold"><%= topic.title %></h3>
                        <h2 class="text-sm text-gray-400">Posted by: <%= topic.first_name %></h2>
                      </a>
                    </li>

                <% }) %>
              </ul>
             <% } else { %>
                <p class="text-sm text-gray-400">You need to join the club to see topics.</p>
              <% } %>

            </div>
          <% } %>
        </div>
      </aside>
    </div>
  <% } else { %>
    <div class="max-w-md mx-auto bg-gray-800 rounded-2xl p-6 w-full shadow-lg">
      <h1 class="text-2xl font-semibold mb-4">Club</h1>
      <p class="text-sm mb-4">You are not logged in.</p>
      <a href="/" class="block w-full rounded-lg p-2 bg-blue-600 hover:bg-blue-700 text-center">
        Go back to Home
      </a>
    </div>
  <% } %>
</body>
</html>