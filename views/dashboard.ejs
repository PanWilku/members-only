<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Dashboard</title>
  <link href="/output.css" rel="stylesheet" />
</head>
<body class="flex bg-gray-900 text-white min-h-screen p-6 justify-center items-center max-w-dvw">
  <% if (user && user.first_name) { %>
    <div class="flex w-full gap-6">
      
      <!-- Left: All Clubs -->
      <div class="flex w-1/3 flex-col gap-6 pr-16">
        <div class="flex w-full bg-gray-800 rounded-2xl p-6 shadow-lg flex-col">
          <h1 class="text-2xl font-semibold mb-4">All Clubs</h1>
          <% if (clubs.length === 0) { %>
            <p class="text-sm text-gray-400">No clubs available.</p>
          <% } else { %>
              <% clubs.forEach(club => { %>
                <div class="flex w-full gap-4 mb-4 bg-gray-700 p-4 rounded-lg">
                  <div class="flex w-3/4 flex-col gap-2">
                      <h2 class="text-lg font-semibold"><%= club.name %></h2>
                      <p class="text-sm mt-1"><%= club.description %></p>
                      <p class="text-xs text-gray-400 mt-2">Created by: <%= club.first_name %></p>
                  </div>
                  <div class="flex w-1/4 justify-end items-center gap-4">
                    <% if (club.is_member) { %>
                      <span class="text-green-500">Joined</span>
                    <% } else { %>
                    <a href="/club/<%= club.id %>" class="flex w-fit p-4 rounded-lg bg-blue-600 hover:bg-blue-700 text-center">
                      Join Club
                    </a>
                    <% } %>

                    <a href="/club/<%= club.id %>" class="flex w-fit p-4 rounded-lg bg-gray-600 hover:bg-gray-700 text-center">
                      View Club
                    </a>
                  </div>
                </div>
              <% }) %>
            </ul>
          <% } %>
        </div>
      </div>

      <!-- Middle: Dashboard -->
      <div class="flex w-1/3 flex-col gap-6 justify-center items-center">
        <div class="flex w-4/5 bg-gray-800 rounded-2xl p-6 shadow-lg flex-col">
          <h1 class="text-2xl font-semibold mb-4">Dashboard</h1>
          <p class="text-sm mb-4">Welcome, <%= user.first_name %>!</p>
          <form action="/log-out" method="POST">
            <button class="w-full rounded-lg p-2 bg-blue-600 hover:bg-blue-700 cursor-pointer">Log Out</button>
          </form>
          <div class="mt-4">
            <a href="/create-club" class="block w-full rounded-lg p-2 bg-green-600 hover:bg-green-700 text-center">
              Create a Club or Join One!
            </a>
          </div>
        </div>
      </div>

      <!-- Right: Empty space -->
      <div class="flex w-1/3 flex-col gap-6">
        <div class="flex w-full flex-col">
        </div>
      </div>
    </div>
  <% } else { %>
    <div class="max-w-md mx-auto bg-gray-800 rounded-2xl p-6 w-full shadow-lg">
      <h1 class="text-2xl font-semibold mb-4">Dashboard</h1>
      <p class="text-sm mb-4">You are not logged in.</p>
      <a href="/" class="block w-full rounded-lg p-2 bg-blue-600 hover:bg-blue-700 text-center">
        Go back to Home
      </a>
    </div>
  <% } %>
  </body>

</html>
